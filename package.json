{
  "name": "block-google-credential-picker",
  "version": "1.0.0",
  "description": "Browser extension to block Google One Tap sign-in and credential picker dialogs.",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "copy:chrome": "shx cp -R chrome dist/chrome",
    "copy:firefox": "shx cp -R firefox dist/firefox",
    "zip:chrome": "cross-zip dist/chrome dist/block-google-credential-picker-chrome.zip",
    "zip:firefox": "cross-zip dist/firefox dist/block-google-credential-picker-firefox.zip",
    "build": "npm run clean && npm run copy:chrome && npm run copy:firefox && node build.js",
    "start:firefox": "web-ext run --source-dir ./firefox/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bacloud22/block-google-credential-picker.git"
  },
  "keywords": [
    "browser-extension",
    "chrome-extension",
    "firefox-extension",
    "google-one-tap",
    "blocker",
    "credential-picker"
  ],
  "author": "bacloud22",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bacloud22/block-google-credential-picker/issues"
  },
  "homepage": "https://github.com/bacloud22/block-google-credential-picker#readme",
  "devDependencies": {
    "cross-env": "^10.1.0",
    "fs-extra": "^11.3.2",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tslib": "^2.8.1",
    "web-ext": "^9.0.0",
    "zip-a-folder": "^3.1.9"
  }
}
